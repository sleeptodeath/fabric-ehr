  <script type="text/javascript">
    $('#btn_update').on('click', function(){
      var issuer = $('#issuer').val();
      var ehrNumber = $('#ehrNumber').val();
      var pname = $('#pname').val();
      var age = $('#age').val();
      var sex = $('#sex').val();
      var city = $('#city').val();
      var subject = $('#subject').val();
      var zhenduan = $('#zhenduan').val();
      var chuli = $('#chuli').val();
      var obj = {
        'issuer': issuer,
        'ehrNumber': ehrNumber,
        'content': {
          'pname': pname,
          'age': age,
          'sex': sex,
          'city': city,
          'subject': subject,
          'zhenduan':zhenduan,
          'chuli':chuli
        }
      };
      
      // alert(JSON.stringify(obj));
      $.ajax({
        type: 'POST',
        url: '/user/_update',
        data: obj,
        success: function(data){
          console.log(data)
          if(data.status){
            alert('修改成功' + data.info);
          }else{
            alert('修改失败' + data.info);
          }
        },
        error: function(){
          alert('修改失败');
        },
        dataType: 'json'
      });
    });
